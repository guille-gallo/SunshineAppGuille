<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guillermogallo.com.quickweather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="guillermogallo.com.quickweather.MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        android:name="guillermogallo.com.quickweather.DetailActivity"
        android:label="@string/title_activity_detail"
        android:parentActivityName="guillermogallo.com.quickweather.MainActivity"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="guillermogallo.com.quickweather.MainActivity" />
        </activity>
        <activity
            android:name="guillermogallo.com.quickweather.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="guillermogallo.com.quickweather.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="guillermogallo.com.quickweather.MainActivity" />
        </activity>
        <provider
            android:authorities="com.example.android.guillermogallo"
            android:name="guillermogallo.com.quickweather.data.WeatherProvider" />

    </application>

</manifest>